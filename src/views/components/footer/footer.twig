<footer class="store-footer bg-gray-800 text-white py-6">
    <!-- زر الصعود لأعلى الصفحة في رأس الفوتر -->
    <div class="container mx-auto text-center mb-4">
        <button id="scrollToTop" class="scroll-to-top bg-gray-700 text-white p-2 rounded-full hover:bg-gray-600 transition">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 15l7-7 7 7" />
            </svg>
        </button>
    </div>

    <div aria-label="footer" class="store-footer__inner">
        <div class="container mx-auto grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 lg:gap-6">
            <!-- قسم تواصل معنا على اليمين -->
            <div class="footer-section">
                <h3 class="footer-section-title">
                <div class="footer-section-content">
                    <salla-contacts></salla-contacts>
                </div>
            </div>

            <!-- قسم الشعار وبيانات المتجر في المنتصف -->
            <div class="footer-section flex flex-col items-center">
                <a href="{{ link('/') }}" class="flex items-center m-0 text-white">
                    <img src="{{ store.logo }}" alt="{{ store.name }} logo" class="w-20 h-20 mb-2">
                </a>
                <h3 class="text-xl font-bold">{{ store.name }}</h3>
                {% if store.description %}
                    <p class="max-w-sm leading-5 mb-4 text-gray-300 text-center">
                        {{ store.description|raw }}
                    </p>
                {% endif %}
            </div>

            <!-- قسم روابط الصفحات المهمة على اليسار -->
            <div class="footer-section text-center">
                <h3 class="footer-section-title">
                <div class="footer-section-content">
                    <salla-menu source="footer"></salla-menu>
                </div>
                <!-- أيقونات تحميل التطبيق تحت روابط الصفحات المهمة -->
                <div class="footer-app-icons mt-4">
                    <salla-apps-icons class="mb-4"></salla-apps-icons>
                </div>
            </div>
        </div>

        <!-- أيقونات التواصل الاجتماعي في الأسفل -->
        <div class="container mx-auto mt-8 footer-social-icons">
            <div class="flex justify-center">
                <salla-social class="mb-4"></salla-social>
            </div>
        </div>
    </div>

    <!-- الفوتر السفلي -->
    <div class="md:flex items-center justify-between py-2 container mx-auto text-center border-t border-gray-700 mt-4">
        <span class="text-sm text-gray-400">{% hook copyright %}</span>
        <salla-payments></salla-payments>
    </div>
</footer>

<script>
    document.getElementById('scrollToTop').addEventListener('click', function() {
        window.scrollTo({ top: 0, behavior: 'smooth' });
    });
</script>