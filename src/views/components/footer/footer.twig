<footer class="store-footer">
  <div class="store-footer__inner" style="background-color: #f8f6f4;">
    <div class="container flex flex-col">
      
      <!-- العودة إلى أعلى -->
      <div class="to-top flex justify-center overflow-hidden animate__fadeInUp" data-wow-delay="0.5s">
        <a class="flex-center pb-2 pt-4 gap-2 w-max h-full" href="#" aria-label="Back to Top">
          <p>العودة إلى أعلى</p>
          <i class="sicon-arrow-up icon"></i>
        </a>
      </div>

      <!-- القسم العلوي للفوتر -->
      <div class="footer-top flex flex-col md:flex-row justify-center align-center">
        <div class="footer-social flex flex-col">
          <!-- مكونات إضافية يمكن إضافتها لاحقًا -->
        </div>
      </div>

      <!-- القسم الأوسط للفوتر -->
      <div class="footer-middle flex flex-col md:flex-row gap-8 py-6">
        <!-- الشعار والوصف -->
        <div class="flex flex-col md:max-w-xs text-center md:text-left">
          <a class="logo-footer mb-3" href="{{ link('/') }}" aria-label="Store Logo">
            <img src="{{ store.logo }}" alt="{{ store.name }}" style="height: 2.5rem;">
          </a>
          {% if store.description %}
            <p class="leading-6 text-gray-700">
              {{ store.description|raw }}
            </p>
          {% endif %}
        </div>

        <!-- الروابط الهامة -->
        <div class="flex flex-col gap-4">
          <h3 class="text-lg">روابط تهمك</h3>
          {% component 'footer.menu' %}
        </div>

        <!-- خدمة العملاء -->
        <div class="flex flex-col gap-4">
          <h3 class="text-lg">خدمة العملاء</h3>
          {% component 'footer.contacts' %}
        </div>

        <!-- تطبيق المتجر -->
        <div class="flex flex-col gap-4">
          <h3 class="text-lg">تطبيق {{ store.name }}</h3>
          {% component 'footer.mobile-apps' %}
        </div>
      </div>

      <!-- القسم السفلي للفوتر -->
      <div class="footer-bottom flex flex-col lg:flex-row items-center justify-between py-4 gap-6 border-t border-gray-200">
        <!-- طرق الدفع -->
        <ul class="flex justify-center items-center flex-wrap gap-4">
          {% component 'footer.payment-methods' %}
        </ul>

        <!-- حقوق الملكية -->
        <span class="text-sm text-gray-500 text-center">
          © 2024 <a href="{{ link('/') }}" class="hover:text-primary" target="_blank" rel="noreferrer">{{ store.name }}</a>. جميع الحقوق محفوظة.
        </span>

        <!-- شهادة موثوقية الأعمال -->
        <div class="sbc-certificate flex items-center gap-4">
          <div class="sbc-link w-12 h-12 bg-white rounded flex items-center justify-center">
            <a href="https://eauthenticate.saudibusiness.gov.sa/certificate-details/{{ store.settings.certificate.id }}" target="_blank" rel="noopener">
              <img class="object-contain max-h-full" src="{{ 'images/sbc.png' | cdn }}" alt="e-commerce certificate">
            </a>
          </div>
          <p class="text-gray-400">موثّق في منصة الأعمال</p>
        </div>
      </div>
    </div>
  </div>
</footer>
