{#
| Variable                    | Type          | Description                                   |
|-----------------------------|---------------|-----------------------------------------------|
| advertisement               | Advertisement |                                               |
| advertisement.id            | int           |                                               |
| advertisement.icon          | string        | Css class                                     |
| advertisement.title         | string        |                                               |
| advertisement.description   | string        |                                               |
| advertisement.url           | ?string       |                                               |
| advertisement.close_url     | string        | * Should be client side to avoid cache issues |
| advertisement.colors        | object        |                                               |
| advertisement.colors.bg     | string        | Hex Color ex: #23d1b0                         |
| advertisement.colors.text   | string        | Hex Color ex: #ffffff                         |
| advertisement.target        | string        | `_self`, `_blank`                             |
#}

<!-- عنصر الإعلان -->
<div class="salla-advertisement hidden" data-id="{{ advertisement.id }}"
     style="background-color:{{ advertisement.colors.bg }}; color:{{ advertisement.colors.text }}">
    <div class="container center-between py-2.5">
        <!-- عنوان الإعلان -->
        <h2 class="flex-1 font-bold text-center text-sm">
            <!-- أيقونة الإعلان -->
            <i class="inline-block align-middle mr-2 text-base {{ advertisement.icon }}"></i>
            <!-- إذا كان هناك رابط للإعلان -->
            {% if advertisement.url %}
                <a href="{{ advertisement.url }}" target='{{ advertisement.target }}' style="color:{{ advertisement.colors.text }}">
                    {{ advertisement.description }}
                </a>
            <!-- إذا لم يكن هناك رابط للإعلان -->
            {% else %}
                {{ advertisement.description }}
            {% endif %}
        </h2>
        <!-- زر إغلاق الإعلان -->
        <a href="#" class="px-1 ad-close sicon-cancel" aria-label="close-alert" style="color:{{ advertisement.colors.text }}"></a>
    </div>
</div>
