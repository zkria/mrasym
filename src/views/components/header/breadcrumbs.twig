{#
| المتغير          | النوع    | الوصف                          |
|-------------------|---------|--------------------------------|
| breadcrumbs        | array   | قائمة الخبز                   |
#}

<nav class="breadcrumbs">
    <ul>
        {% for breadcrumb in breadcrumbs %}
            <li>
                {% if not loop.last %}
                    <a href="{{ breadcrumb.url }}">{{ breadcrumb.title }}</a>
                {% else %}
                    <span>{{ breadcrumb.title }}</span>
                {% endif %}
            </li>
        {% endfor %}
    </ul>
</nav>


