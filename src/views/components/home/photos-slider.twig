{#
| المتغير          | النوع    | الوصف                                                               |
|-------------------|---------|---------------------------------------------------------------------|
| items             | array   | قائمة الشرائح                                                      |
| items[].url       | string  | رابط العنصر                                                        |
| items[].link_type | ?string | نوع الرابط (category, product, offers, page, external_link, brand) |
| items[].image.url | string  | رابط صورة العنصر                                                  |
| items[].image.alt | string  | نص بديل للصورة                                                    |
| position          | int     | رقم ترتيب يبدأ من الصفر                                           |
#}
<section class="s-block s-block--photos-slider {{ is_repeated ? 'repeated-block' : '' }}">
    <salla-slider 
      type="carousel" 
      class="home-slider photos-slider"
      centered 
      auto-play 
      pagination
      id="photos-{{ position }}-slider"> 
      <div slot="items">
        {% for index, item in items %}
          <div class="swiper-slide">
            <a href="{{ item.url }}">
              <img loading="eager" src="{{ item.image.url }}" class="w-full object-contain rounded-md" height="300" width="1200" alt="{{ store.name }} image-slider-{{ index }}">
            </a>
          </div>
        {% endfor %}
      </div>
    </salla-slider>
</section> 
